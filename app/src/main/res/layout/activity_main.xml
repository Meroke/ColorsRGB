<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id = "@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.camera.view.PreviewView>

        <LinearLayout
            android:id="@+id/colorLinerLayout"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:alpha="0.95"
            android:background="@drawable/white_boder"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="R:"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/Red"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/red_boder"
                    android:gravity="center"
                    android:text="244"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Red2"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/red_boder"
                    android:gravity="center"
                    android:text="204"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="G:"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/Green"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/green_boder"
                    android:gravity="center"
                    android:text="208"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Green2"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/green_boder"
                    android:gravity="center"
                    android:text="208"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="11dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="B:"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/Blue"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_boder"
                    android:gravity="center"
                    android:text="199"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Blue2"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_boder"
                    android:gravity="center"
                    android:text="233"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/PH"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/gray_boder"
                    android:gravity="center"
                    android:text="PH:7.8 "
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    />

                <EditText
                    android:id="@+id/UA"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/gray_boder"
                    android:gravity="center"
                    android:text="UA:385"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/start"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignRight="@id/previewView"
            android:layout_centerVertical="true"
            android:layout_marginRight="160dp"
            android:alpha="0.7"
            android:background="@drawable/setbar_bg"
            android:rotation="-90"
            android:text="START" />

        <com.duoshine.camerax.ResizableImageView
            android:id="@+id/rotate_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="250dp"
            android:background="@null"
            android:rotation="270"
            android:scaleType="fitXY"
            android:src="@mipmap/target_circle_white" />
        <SeekBar
            android:id="@+id/horzontalSeekBar"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:max="100"
            android:progress="50"
            android:alpha="0"
            android:paddingBottom="30dp"/>

        <SeekBar
            android:id="@+id/verticalSeekBar"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="1"
            android:max="100"
            android:progress="50"
            android:rotation="90" />

        <Button
            android:id="@+id/centerButton"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:alpha="0.1"
            />
    </RelativeLayout>
</LinearLayout>