<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id = "@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.camera.view.PreviewView>

        <LinearLayout
            android:id="@+id/colorLinerLayout"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:alpha="0.95"
            android:background="@drawable/white_boder"
            android:orientation="vertical"
            android:paddingTop="40dp">


            <RelativeLayout
                android:id="@+id/valueLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/PH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="PH"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <com.lihang.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/PH"
                    app:hl_cornerRadius="18dp"
                    app:hl_endColor="#cc99ff"
                    app:hl_shadowColor="@color/black"
                    app:hl_shadowLimit="15dp"
                    app:hl_startColor="#9933ff">

                    <EditText
                        android:id="@+id/Red"
                        android:layout_width="75dp"
                        android:layout_height="60dp"

                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="7.5"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </com.lihang.ShadowLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/UA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="UA"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <com.lihang.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/UA"
                    app:hl_cornerRadius="18dp"
                    app:hl_endColor="#ff9933"
                    app:hl_shadowColor="@color/black"
                    app:hl_shadowLimit="15dp"
                    app:hl_startColor="@color/orange">

                    <EditText
                        android:id="@+id/Green"
                        android:layout_width="75dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="15"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </com.lihang.ShadowLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/gray" />

            <com.lihang.ShadowLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:hl_cornerRadius="15dp"
                app:hl_shadowColor="@color/black"
                app:hl_shadowLimit="5dp">

                <EditText
                    android:id="@+id/advise"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_boder"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="容易感染"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </com.lihang.ShadowLayout>
        </LinearLayout>


        <Button
            android:id="@+id/start"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignRight="@id/previewView"
            android:layout_centerVertical="true"
            android:layout_marginRight="370dp"
            android:alpha="0.7"
            android:background="@drawable/setbar_bg"
            android:rotation="-90"
            android:text="START" />

        <com.duoshine.camerax.ResizableImageView
            android:id="@+id/rotate_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="160dp"
            android:background="@null"
            android:rotation="270"
            android:scaleType="fitXY"
            android:src="@mipmap/target_circle_white" />
        <SeekBar
            android:id="@+id/horzontalSeekBar"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:max="100"
            android:progress="50"
            android:alpha="0"
            android:paddingBottom="30dp"/>

        <SeekBar
            android:id="@+id/verticalSeekBar"
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:alpha="1"
            android:max="100"
            android:progress="50"
            android:rotation="90"
            />


    </RelativeLayout>
</LinearLayout>