<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/white"></solid>
            <corners android:radius="350dp" />属性就是设置圆角
            <stroke android:width="10dip" android:color="@color/gray" android:alpha="0.3"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray"></solid>
            <corners android:radius="350dp" />属性就是设置圆角
            <stroke android:width="10dip" android:color="#DCDCDC" android:alpha="0.3"/>
        </shape>
    </item>

</selector>

